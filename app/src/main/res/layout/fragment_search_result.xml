<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".mvvm.views.activities.SearchActivity">

    <data>

        <variable
            name="vm"
            type="taiwan.no1.app.ssfm.mvvm.viewmodels.FragmentSearchResultViewModel"/>

        <variable
            name="layoutManager"
            type="android.support.v7.widget.RecyclerView.LayoutManager"/>

        <variable
            name="adapter"
            type="android.support.v7.widget.RecyclerView.Adapter"/>

        <variable
            name="loadmore"
            type="taiwan.no1.app.ssfm.misc.extension.recyclerview.RecyclerViewScrollCallback"/>
    </data>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_music_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adapter="@{adapter}"
        android:layoutManager="@{layoutManager}"
        android:loadMore="@{loadmore}"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_search_music_type_1"/>
</layout>