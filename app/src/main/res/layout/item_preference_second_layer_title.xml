<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="avm"
            type="taiwan.no1.app.ssfm.features.preference.PreferenceOptionViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{avm::onClick}"
        android:orientation="vertical"
        tools:background="@color/colorMainThemeBackground">

        <TextView
            android:id="@+id/tv_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:text="@{avm.attributes}"
            android:textColor="@color/colorWhite"
            tools:text="Light Theme"/>
    </RelativeLayout>
</layout>