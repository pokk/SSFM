<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewmodel"
            type="taiwan.no1.app.ssfm.mvvm.viewmodels.MainViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.devrapid.musicdiskplayer.RotatedCircleWithIconImageView
            android:id="@+id/rcii_album"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/playerControllerLayout"
            app:layout_constraintEnd_toEndOf="@+id/playerControllerLayout"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/playerControllerLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:src="@drawable/sample_lady_gaga"
            tools:layout_editor_absoluteX="92dp"/>

        <taiwan.no1.app.ssfm.misc.widgets.PlayerControllerLayout
            android:id="@+id/playerControllerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rcii_album">
        </taiwan.no1.app.ssfm.misc.widgets.PlayerControllerLayout>

    </android.support.constraint.ConstraintLayout>
</layout>