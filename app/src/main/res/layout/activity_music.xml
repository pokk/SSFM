<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".mvvm.views.activities.PlayMainActivity">

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewmodel"
            type="taiwan.no1.app.ssfm.mvvm.viewmodels.PlayMainViewModel"/>
    </data>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/root"
        style="@style/Template.Mainview">

        <View
            android:id="@+id/view"
            style="@style/Template.TopBar.HideView"/>

        <!-- Menu ToolBar -->
        <include
            android:id="@+id/include_toolbar"
            style="@style/Template.TopBar.Toolbar"
            layout="@layout/part_toolbar_view"/>

        <include
            layout="@layout/activity_part_play_music"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_toolbar"/>
    </android.support.constraint.ConstraintLayout>
</layout>