<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="avm"
            type="taiwan.no1.app.ssfm.functions.chart.RecyclerViewChartRankChartViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/iv_chart"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/sample_lady_gaga"/>

        <TextView
            android:id="@+id/tv_chart_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="24dp"
            android:text="@{avm.name}"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:text="BillBoard"/>

        <TextView
            android:id="@+id/tv_update_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="8dp"
            android:text="@{avm.update}"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="12sp"
            tools:text="every Fri. update"/>
    </android.support.v7.widget.CardView>
</layout>