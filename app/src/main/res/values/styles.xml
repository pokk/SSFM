<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorBrown</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/splash_view</item>
    </style>

    <!-- Login -->
    <style name="Login">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Login.Button">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">52dp</item>
        <item name="android:layout_marginRight">52dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="Login.Input">
        <item name="android:drawablePadding">20dp</item>
        <item name="android:ems">10</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhiteSmoke</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Menu -->
    <style name="Menu"/>

    <style name="Menu.Hamburger" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Menu.Items">
        <item name="android:drawablePadding">16dp</item>
        <item name="android:fontFamily">@font/sigmar_one</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">70dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="Menu.Search" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Menu.Title">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Menu.PlaylistItems" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@null</item>
        <item name="android:padding">8dp</item>
    </style>


    <!-- Template -->
    <style name="Template"/>

    <style name="Template.Activity">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toBottomOf">@+id/include_toolbar</item>
    </style>

    <style name="Template.MainView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/cardview_dark_background</item>
    </style>

    <style name="Template.TopBar">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="Template.TopBar.HideView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@color/cardview_dark_background</item>
    </style>

    <style name="Template.TopBar.Toolbar"/>

    <!-- Toolbar -->
    <style name="Toolbar">
        <item name="android:background">@color/colorMainThemeBackground</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- RecyclerView -->
    <style name="RecyclerView"/>

    <style name="RecyclerView.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.04</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="RecyclerView.Basic">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="RecyclerView.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="RecyclerView.SeparateLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:background">@color/colorGray</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!-- ImageView -->
    <style name="ImageView"/>

    <style name="ImageView.Shadow">
        <item name="background">@drawable/shadow</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>

    <!-- Chart Detail -->
    <style name="ChartDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="ChartDetail.Summary">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ChartDetail.Name">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Recycler VMusicItem -->
    <style name="RecyclerViewItem"/>

    <style name="RecyclerViewItem.Artist">
        <item name="android:layout_width">@dimen/rv_artist_image_height</item>
    </style>

    <style name="RecyclerViewItem.Artist.Image">
        <item name="android:layout_height">@dimen/rv_artist_image_height</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="RecyclerViewItem.Artist.Text">
        <item name="android:layout_height">@dimen/rv_artist_text_height</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RecyclerViewItem.Artist.Card">
        <item name="android:layout_height">@dimen/rv_card_artist_height</item>
        <item name="cardCornerRadius">@dimen/cd_artist_corner_radius</item>
        <item name="cardElevation">@dimen/cd_artist_elevation</item>
    </style>

    <style name="RecyclerViewItem.Artist.Linear"/>

    <style name="RecyclerViewItem.Artist.Linear.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RecyclerViewItem.Artist.Linear.Follower">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/one_unit</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="BottomSheet"/>

    <style name="BottomSheet.Selection">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="BottomSheet.Separate">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">#bfbfbf</item>
    </style>
</resources>
