<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".mvvm.views.activities.SearchActivity">

    <data>

        <variable
            name="avm"
            type="taiwan.no1.app.ssfm.mvvm.viewmodels.RecyclerViewArtistChartViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:error="@{@drawable/sample_jieyi_icon}"
            android:imageUrl="@{avm.thumbnail}"
            android:placeHolder="@{@drawable/sample_lady_gaga}"
            android:scaleType="fitXY"
            android:src="@drawable/sample_lady_gaga"
            tools:src="@drawable/sample_lady_gaga"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="25dp"
            android:text="@{avm.artistName}"
            tools:text="Lady Gaga"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="3dp"
            tools:text="The Cure"/>
    </android.support.v7.widget.CardView>
</layout>